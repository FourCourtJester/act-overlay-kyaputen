script#mustache-toast-boss(type="x-tmpl-mustache")
    li.mechanic.text-nowrap(class="phase-{{phase}}")
        span.type.d-inline-block.text-right {{mechanic.type}}
        span.ttl-wrap.position-relative.d-inline-block.text-center
            span.ttl {{ttl}}
            svg.position-absolute #[circle(r="12" cx="16" cy="16", style="animation-duration:{{ttl}}s;")]
        span.message-wrap.flex-grow-1.text-left
            span.name.text-white.mr-2 {{mechanic.name}}
            span.message.font-italic {{mechanic.message}}