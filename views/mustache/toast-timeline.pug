script#mustache-toast-entry(type="x-tmpl-mustache")
    li.mechanic.d-flex.show
        span.type.d-inline-block.text-right {{mechanic.type}}
        span.ttl-wrap.position-relative.d-inline-block.text-center
            span.ttl {{ttl}}
            svg.position-absolute #[circle(r="12" cx="16" cy="16", style="animation-duration:{{ttl}}s;")]
        span.message.flex-grow-1.text-left.text-nowrap
            span.text-white.mr-2 {{mechanic.name}}
            span.font-italic {{mechanic.message}}